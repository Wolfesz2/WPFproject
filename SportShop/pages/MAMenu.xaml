<Page x:Class="SportShop.pages.MAMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportShop.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MAMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Меню" FontSize="20" HorizontalAlignment="Center"/>
            <Button x:Name="ProfileButton" Content="Профиль" Width="150" Margin="5" Click="ProfileButton_Click"/>
            <Button x:Name="ProductsButton" Content="Редактор продуктов" Width="150" Margin="5" Click="ProductsButton_Click"/>
            <Button x:Name="BackButton" Content="Выйти в главное меню" Width="150" Margin="5" Click="BackButton_Click"/>
        </StackPanel>

    </Grid>
</Page>
